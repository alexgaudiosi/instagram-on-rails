<% if @posts.any? %>
  <div class="row">
	<% @posts.each do |post| %>
		  	<div class="col-md-4">
		  		<%= image_tag post.picture.url(:medium), class: 'uploaded-pic, img-rounded'%>
		  		<p><%= post.description %></p>
		  		<p><%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger' %></p>
		  	</div>
	<% end %>
  </div>
<% else %>
	No posts yet
<% end %>